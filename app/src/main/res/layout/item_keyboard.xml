<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_keyboard"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#fff"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:background="@drawable/shape_string"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pay_box1"
            style="@style/InputTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#1000"/>

        <TextView
            android:id="@+id/pay_box2"
            style="@style/InputTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>


        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#1000"/>

        <TextView
            android:id="@+id/pay_box3"
            style="@style/InputTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>


        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#1000"/>

        <TextView
            android:id="@+id/pay_box4"
            style="@style/InputTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>


        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#1000"/>

        <TextView
            android:id="@+id/pay_box5"
            style="@style/InputTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>


        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#1000"/>

        <TextView
            android:id="@+id/pay_box6"
            style="@style/InputTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:padding="15dp"
        android:text="忘记密码"
        android:textColor="#999"
        android:textSize="14sp"/>

    <LinearLayout
        android:id="@+id/keyboard"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="60dp"
        android:background="#f1f1f1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="0.1dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pay_keyboard_one"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/selector_gride"
                android:contentDescription="@string/action_settings"
                android:gravity="center"
                android:text="1"
                android:textColor="#000"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/pay_keyboard_two"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="0.1dp"
                android:layout_marginRight="0.1dp"
                android:layout_weight="1"
                android:background="@drawable/selector_gride"
                android:contentDescription="@string/action_settings"
                android:gravity="center"
                android:text="2"
                android:textColor="#000"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/pay_keyboard_three"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/selector_gride"
                android:contentDescription="@string/action_settings"
                android:gravity="center"
                android:text="3"
                android:textColor="#000"
                android:textSize="25sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="0.1dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pay_keyboard_four"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/selector_gride"
                android:contentDescription="@string/action_settings"
                android:gravity="center"
                android:text="4"
                android:textColor="#000"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/pay_keyboard_five"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="0.1dp"
                android:layout_marginRight="0.1dp"
                android:layout_weight="1"
                android:background="@drawable/selector_gride"
                android:contentDescription="@string/action_settings"
                android:gravity="center"
                android:text="5"
                android:textColor="#000"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/pay_keyboard_sex"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/selector_gride"
                android:contentDescription="@string/action_settings"
                android:gravity="center"
                android:text="6"
                android:textColor="#000"
                android:textSize="25sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="0.1dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pay_keyboard_seven"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/selector_gride"
                android:contentDescription="@string/action_settings"
                android:gravity="center"
                android:text="7"
                android:textColor="#000"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/pay_keyboard_eight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="0.1dp"
                android:layout_marginRight="0.1dp"
                android:layout_weight="1"
                android:background="@drawable/selector_gride"
                android:contentDescription="@string/action_settings"
                android:gravity="center"
                android:text="8"
                android:textColor="#000"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/pay_keyboard_nine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/selector_gride"
                android:contentDescription="@string/action_settings"
                android:gravity="center"
                android:text="9"
                android:textColor="#000"
                android:textSize="25sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pay_keyboard_space"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#f1f1f1"
                android:clickable="false"
                android:contentDescription="@string/action_settings"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/pay_keyboard_zero"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/selector_gride"
                android:contentDescription="@string/action_settings"
                android:gravity="center"
                android:text="0"
                android:textColor="#000"
                android:textSize="25sp"/>

            <ImageView
                android:id="@+id/pay_keyboard_del"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#f1f1f1"
                android:contentDescription="@string/action_settings"
                android:gravity="center"
                android:padding="8dp"
                android:src="@drawable/sym_keyboard_delete"
                android:textColor="#000"
                android:textSize="25sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
